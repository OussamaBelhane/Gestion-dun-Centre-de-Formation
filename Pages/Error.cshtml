@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<section class="container py-32">
    <div style="text-align: center; max-width: 600px; margin: 0 auto;">
        <h1 style="font-size: 8rem; font-weight: 900; line-height: 1; color: var(--color-accent); margin-bottom: var(--space-4);">!</h1>
        <h2 style="font-size: var(--font-size-3xl); margin-bottom: var(--space-6);">Something Went Wrong</h2>
        <p style="font-size: var(--font-size-lg); color: var(--color-text-light); margin-bottom: var(--space-12);">
            An error occurred while processing your request. We apologize for the inconvenience.
        </p>

        @if (Model.ShowRequestId)
        {
            <div style="background-color: var(--color-bg-alt); padding: var(--space-6); margin-bottom: var(--space-12);">
                <p style="font-size: var(--font-size-xs); font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: var(--space-2); color: var(--color-text-light);">Request ID</p>
                <code style="font-family: monospace; font-size: var(--font-size-sm);">@Model.RequestId</code>
            </div>
        }

        <div style="display: flex; gap: var(--space-4); justify-content: center;">
            <a asp-page="/Index" class="btn btn-lg">Return Home</a>
            <a asp-page="/Courses/Index" class="btn btn-lg btn-outline">Browse Courses</a>
        </div>
    </div>
</section>
