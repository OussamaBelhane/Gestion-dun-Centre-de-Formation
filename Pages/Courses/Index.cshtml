@page
@using Microsoft.AspNetCore.Identity
@using GestionCentreDeFormation.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model GestionCentreDeFormation.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Courses";
    var currentUser = await UserManager.GetUserAsync(User);
}

<style>
    /* Neo-Brutalist Overrides for Courses Page */
    :root {
        --neo-border: 2px solid #000000;
        --neo-shadow: 5px 5px 0px #000000;
        --neo-shadow-hover: 8px 8px 0px #000000;
        --neo-orange: #FF4500;
        --neo-green: #00FF41; /* Matrix Green for enrolled */
        --neo-red: #FF0000;   /* Urgent Red */
        --neo-grey: #A0A0A0;
    }

    .filter-toolbar {
        background: #f0f0f0;
        border: var(--neo-border);
        padding: 2rem;
        margin-bottom: 3rem;
    }

    .neo-input {
        border: var(--neo-border);
        border-radius: 0;
        padding: 15px;
        font-weight: 700;
        background: #fff;
    }

    .neo-input:focus {
        outline: none;
        border: 3px solid #000;
        box-shadow: none;
    }

    .neo-select {
        border: var(--neo-border);
        border-radius: 0;
        padding: 15px;
        font-weight: 700;
        background: #fff;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 0.75rem center;
        background-size: 16px 12px;
    }

    .neo-btn-search {
        background-color: var(--neo-orange);
        color: #fff;
        border: var(--neo-border);
        border-radius: 0;
        padding: 15px 30px;
        font-weight: 900;
        text-transform: uppercase;
        box-shadow: 4px 4px 0px #000;
        transition: all 0.2s ease;
    }

    .neo-btn-search:hover {
        transform: translate(-2px, -2px);
        box-shadow: 6px 6px 0px #000;
        background-color: #000;
        color: #fff;
    }

    .course-card {
        background: #fff;
        border: var(--neo-border);
        box-shadow: var(--neo-shadow);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
    }

    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--neo-shadow-hover);
    }

    .course-img-container {
        height: 200px;
        overflow: hidden;
        border-bottom: var(--neo-border);
        position: relative;
    }

    .course-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* filter: grayscale(100%); Removed per user request */
        transition: transform 0.3s ease;
    }

    .course-card:hover .course-img {
        /* filter: grayscale(0%); */
        transform: scale(1.05);
    }

    .category-tag {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #fff;
        border: 2px solid #000;
        padding: 5px 10px;
        font-weight: 800;
        font-size: 0.8rem;
        text-transform: uppercase;
        z-index: 10;
    }

    .course-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .course-title {
        font-weight: 900;
        text-transform: uppercase;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        line-height: 1.1;
    }

    .course-desc {
        font-weight: 500;
        color: #555;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .meta-divider {
        height: 2px;
        background: #000;
        margin: 1rem 0;
        width: 100%;
    }

    .meta-data {
        display: flex;
        justify-content: space-between;
        font-weight: 800;
        font-size: 0.9rem;
    }

    .btn-view-details {
        width: 100%;
        background: #fff;
        color: #000;
        border: none;
        border-top: var(--neo-border);
        padding: 1rem;
        font-weight: 900;
        text-transform: uppercase;
        transition: all 0.2s ease;
        text-align: center;
        text-decoration: none;
        display: block;
    }

    .btn-view-details:hover {
        background: #000;
        color: #fff;
    }

    /* Smart Card Buttons */
    .btn-enroll {
        width: 100%;
        background: var(--neo-orange);
        color: #fff;
        border: none;
        border-top: var(--neo-border);
        padding: 1rem;
        font-weight: 900;
        text-transform: uppercase;
        transition: all 0.2s ease;
        text-align: center;
        display: block;
        cursor: pointer;
    }

    .btn-enroll:hover {
        background: #000;
        color: #fff;
    }

    .btn-enrolled {
        width: 100%;
        background: var(--neo-green);
        color: #000;
        border: none;
        border-top: var(--neo-border);
        padding: 1rem;
        font-weight: 900;
        text-transform: uppercase;
        text-align: center;
        display: block;
        cursor: default;
    }

    .btn-full {
        width: 100%;
        background: var(--neo-grey);
        color: #fff;
        border: none;
        border-top: var(--neo-border);
        padding: 1rem;
        font-weight: 900;
        text-transform: uppercase;
        text-align: center;
        display: block;
        cursor: not-allowed;
    }

    .capacity-bar {
        font-weight: 800;
        font-size: 0.8rem;
        margin-top: 0.5rem;
        text-transform: uppercase;
    }

    .text-urgent {
        color: var(--neo-red);
    }

    .admin-controls {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        gap: 5px;
        z-index: 10;
    }

    .admin-btn {
        background: #fff;
        border: 2px solid #000;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000;
        transition: all 0.2s;
    }

    .admin-btn:hover {
        background: #000;
        color: #fff;
    }
</style>

<div class="container py-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-4 fw-black text-uppercase m-0" style="font-weight: 900;">Course Catalog</h1>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success border-2 border-dark rounded-0 fw-bold" role="alert">
            @TempData["Message"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-2 border-dark rounded-0 fw-bold" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Filter Toolbar -->
    <div class="filter-toolbar">
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text" class="form-control neo-input w-100" placeholder="Find your track...">
            </div>
            <div class="col-md-4">
                <select class="form-select neo-select w-100">
                    <option selected>All Categories</option>
                    <option value="1">Development</option>
                    <option value="2">Design</option>
                    <option value="3">Data Science</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn neo-btn-search w-100">SEARCH</button>
            </div>
        </div>
    </div>

    <!-- Course Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Course) {
            // Logic for Smart Card
            int seatsTaken = item.Enrollments?.Count ?? 0;
            int seatsRemaining = item.Capacity - seatsTaken;
            bool isFull = seatsTaken >= item.Capacity;
            bool isEnrolled = currentUser != null && item.Enrollments != null && item.Enrollments.Any(e => e.StudentId == currentUser.Id);
            
            <div class="col">
                <div class="course-card">

                    <div class="course-img-container">
                        <div class="category-tag">TRACK</div>
                        @{
                            string imgUrl = item.ImageUrl;
                            if (string.IsNullOrEmpty(imgUrl))
                            {
                                imgUrl = "https://images.unsplash.com/photo-1517694712202-14dd9538aa97?w=800&q=80"; // Default Code
                                if (item.Title.Contains("REACT") || item.Title.Contains("JS")) imgUrl = "https://images.unsplash.com/photo-1633356122544-f134324a6cee?w=800&q=80";
                                else if (item.Title.Contains("UX") || item.Title.Contains("DESIGN")) imgUrl = "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=800&q=80";
                                else if (item.Title.Contains("DEVOPS")) imgUrl = "https://images.unsplash.com/photo-1618401471353-b74a07ddcd5e?w=800&q=80"; // Valid DevOps/Code image
                                else if (item.Title.Contains("CLOUD")) imgUrl = "https://www.simplilearn.com/ice9/free_resources_article_thumb/cloudtools_b.jpg"; // Valid Data Center image
                                else if (item.Title.Contains("DATA")) imgUrl = "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&q=80";
                                else if (item.Title.Contains("CYBER") || item.Title.Contains("SECURITY")) imgUrl = "https://images.unsplash.com/photo-1550751827-4bd374c3f58b?w=800&q=80";
                                else if (item.Title.Contains("MOBILE") || item.Title.Contains("FLUTTER")) imgUrl = "https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=800&q=80";
                            }
                        }
                        <img src="@imgUrl" class="course-img" alt="@item.Title">
                    </div>
                    
                    <div class="course-body">
                        <h3 class="course-title">@item.Title</h3>
                        <p class="course-desc">@item.Description</p>
                        
                        <div class="mt-auto">
                            <div class="meta-divider"></div>
                            <div class="meta-data">
                                <span><i class="bi bi-calendar-event me-2"></i>4 WEEKS</span>
                                <span>DH @item.Price</span>
                            </div>
                            <div class="capacity-bar @(seatsRemaining < 5 ? "text-urgent" : "")">
                                Seats: @seatsTaken/@item.Capacity Taken
                            </div>
                        </div>
                    </div>

                    @if (isEnrolled)
                    {
                        <button class="btn-enrolled" disabled>
                            YOU ARE ENROLLED
                        </button>
                    }
                    else if (isFull)
                    {
                        <button class="btn-full" disabled>
                            CLASS FULL
                        </button>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Enroll" asp-route-courseId="@item.Id">
                            <button type="submit" class="btn-enroll">
                                ENROLL NOW
                            </button>
                        </form>
                    }
                    
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn-view-details">
                        View Details <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
