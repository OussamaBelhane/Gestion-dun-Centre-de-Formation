<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap" rel="stylesheet">
    
    <style>
        /* Admin Specific Overrides for Strict Neo-Brutalism */
        :root {
            --admin-border: 2px solid #000000;
            --admin-shadow: 6px 6px 0px #000000;
            --admin-bg: #ffffff;
        }

        body {
            background-color: #f4f4f4; /* Light grey bg for contrast with white cards */
            font-family: 'Inter', sans-serif;
        }

        /* Layout Structure */
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 250px;
            background-color: #000000;
            color: #ffffff;
            flex-shrink: 0;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            border-right: var(--admin-border);
            z-index: 1000;
        }

        .admin-content {
            flex-grow: 1;
            margin-left: 250px;
            padding: 2rem;
            background-color: #f8f9fa;
        }

        /* Typography */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: -0.5px;
            color: #000;
        }

        /* Cards */
        .admin-card {
            background: var(--admin-bg);
            border: var(--admin-border);
            box-shadow: var(--admin-shadow);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border-radius: 0 !important;
        }

        /* Buttons */
        .btn-admin {
            border: var(--admin-border);
            border-radius: 0 !important;
            box-shadow: var(--admin-shadow);
            font-weight: 700;
            text-transform: uppercase;
            padding: 0.75rem 1.5rem;
            transition: transform 0.1s, box-shadow 0.1s;
            background-color: #fff;
            color: #000;
        }

        .btn-admin:hover {
            transform: translate(-2px, -2px);
            box-shadow: 8px 8px 0px #000;
        }

        .btn-admin:active {
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0px #000;
        }

        .btn-admin-primary {
            background-color: #000;
            color: #fff;
        }
        .btn-admin-primary:hover {
            color: #fff;
            background-color: #222;
        }

        .btn-admin-orange {
            background-color: #FF4400; /* International Orange */
            color: #fff;
        }
        .btn-admin-orange:hover {
            color: #fff;
            background-color: #E63E00;
        }

        /* Tables */
        .table-admin {
            border: var(--admin-border);
            background: #fff;
            box-shadow: var(--admin-shadow);
        }
        .table-admin thead th {
            background-color: #000;
            color: #fff;
            border-bottom: var(--admin-border);
            text-transform: uppercase;
            font-weight: 700;
            padding: 1rem;
        }
        .table-admin tbody td {
            border-bottom: 2px solid #000;
            padding: 1rem;
            vertical-align: middle;
            font-weight: 500;
        }
        .table-admin tbody tr:hover {
            background-color: #f0f0f0;
        }

        /* Form Controls */
        .form-control-admin {
            border: var(--admin-border);
            border-radius: 0 !important;
            padding: 0.75rem;
            font-weight: 600;
            box-shadow: 4px 4px 0px rgba(0,0,0,0.1);
        }
        .form-control-admin:focus {
            box-shadow: var(--admin-shadow);
            border-color: #000;
            outline: none;
        }
    </style>
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <partial name="_AdminSidebar" />
        </aside>

        <!-- Main Content -->
        <main class="admin-content">
            <div class="container-fluid p-0">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
