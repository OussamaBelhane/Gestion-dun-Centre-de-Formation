<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GCF</title>
    
    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Swiss/Neo-Brutalism CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Public Layout -->
    <header class="p-3 border-bottom border-3 border-dark bg-black sticky-top" style="border-bottom: 3px solid #000;">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none me-5">
                    <span class="fs-3 fw-black text-uppercase" style="font-weight: 900; letter-spacing: -1px;">GCF<span style="color: var(--swiss-blue);">.</span></span>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-page="/Index" class="nav-link px-3 link-light fw-bold text-uppercase" style="letter-spacing: 1px;">Home</a></li>
                    <li><a asp-page="/Courses/Index" class="nav-link px-3 link-light fw-bold text-uppercase" style="letter-spacing: 1px;">Courses</a></li>
                    <li><a href="#features" class="nav-link px-3 link-light fw-bold text-uppercase" style="letter-spacing: 1px;">Why Us</a></li>
                </ul>

                <div class="text-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="py-5 border-top border-3 border-dark bg-white" style="border-top: 3px solid #000;">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <h5 class="fw-black text-uppercase mb-3">GCF.</h5>
                    <p class="text-muted small fw-bold">Swiss precision in education management.</p>
                </div>
                <div class="col-2">
                    <h5 class="fw-bold text-uppercase mb-3">Section</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">Home</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">Features</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">Pricing</a></li>
                    </ul>
                </div>
                <div class="col-2">
                    <h5 class="fw-bold text-uppercase mb-3">Section</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">FAQs</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">About</a></li>
                    </ul>
                </div>
                <div class="col-4 offset-1">
                    <form>
                        <h5 class="fw-bold text-uppercase mb-3">Subscribe</h5>
                        <p class="text-muted small fw-bold">Monthly digest of what's new and exciting.</p>
                        <div class="d-flex w-100 gap-2">
                            <label for="newsletter1" class="visually-hidden">Email address</label>
                            <input id="newsletter1" type="text" class="form-control" placeholder="EMAIL ADDRESS" style="border: 2px solid #000; border-radius: 0;">
                            <button class="btn btn-primary" type="button" style="border-radius: 0; border: 2px solid #000; font-weight: 900;">SUBSCRIBE</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="d-flex justify-content-between py-4 my-4 border-top border-dark">
                <p class="fw-bold">&copy; 2025 Gestion Centre de Formation. All rights reserved.</p>
                <ul class="list-unstyled d-flex">
                    <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-twitter"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-instagram"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-facebook"></i></a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
