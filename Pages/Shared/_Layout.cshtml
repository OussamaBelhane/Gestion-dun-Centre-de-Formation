<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GCF</title>
    
    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Swiss/Neo-Brutalism CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                    <div class="position-sticky pt-3">
                        <div class="px-3 mb-4">
                            <h3 class="h4">GCF ADMIN</h3>
                        </div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Dashboard") == true ? "active" : "")" asp-page="/Dashboard/Index">
                                    <i class="bi bi-speedometer2 me-2"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Courses") == true ? "active" : "")" asp-page="/Courses/Index">
                                    <i class="bi bi-journal-bookmark me-2"></i>
                                    Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-people me-2"></i>
                                    Students
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-gear me-2"></i>
                                    Settings
                                </a>
                            </li>
                        </ul>
                        
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                            <span>Account</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </nav>

                <!-- Main Content -->
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="min-height: 100vh; background-color: var(--bs-secondary);">
                    <!-- Top Bar -->
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-2 border-dark">
                        <h1 class="h2">@ViewData["Title"]</h1>
                        <div class="btn-toolbar mb-2 mb-md-0">
                            <div class="btn-group me-2">
                                <button type="button" class="btn btn-sm btn-outline-dark">Share</button>
                                <button type="button" class="btn btn-sm btn-outline-dark">Export</button>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-dark dropdown-toggle">
                                <i class="bi bi-calendar"></i>
                                This week
                            </button>
                        </div>
                    </div>

                    @RenderBody()
                    
                    <footer class="pt-5 pb-4 text-muted text-center text-small">
                        <p class="mb-1">&copy; 2025 Gestion Centre de Formation</p>
                    </footer>
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Public Layout -->
        <header class="p-3 border-bottom border-3 border-dark bg-black sticky-top" style="border-bottom: 3px solid #000;">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none me-5">
                        <span class="fs-3 fw-black text-uppercase" style="font-weight: 900; letter-spacing: -1px;">GCF<span style="color: var(--swiss-blue);">.</span></span>
                    </a>

                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a asp-page="/Index" class="nav-link px-3 link-light fw-bold text-uppercase" style="letter-spacing: 1px;">Home</a></li>
                        <li><a asp-page="/Courses/Index" class="nav-link px-3 link-light fw-bold text-uppercase" style="letter-spacing: 1px;">Courses</a></li>
                        <li><a href="#features" class="nav-link px-3 link-light fw-bold text-uppercase" style="letter-spacing: 1px;">Why Us</a></li>
                    </ul>

                    <div class="text-end">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer class="py-5 border-top border-3 border-dark bg-white" style="border-top: 3px solid #000;">
            <div class="container">
                <div class="row">
                    <div class="col-2">
                        <h5 class="fw-black text-uppercase mb-3">GCF.</h5>
                        <p class="text-muted small fw-bold">Swiss precision in education management.</p>
                    </div>
                    <div class="col-2">
                        <h5 class="fw-bold text-uppercase mb-3">Section</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">Home</a></li>
                            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">Features</a></li>
                            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">Pricing</a></li>
                        </ul>
                    </div>
                    <div class="col-2">
                        <h5 class="fw-bold text-uppercase mb-3">Section</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">FAQs</a></li>
                            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark fw-bold">About</a></li>
                        </ul>
                    </div>
                    <div class="col-4 offset-1">
                        <form>
                            <h5 class="fw-bold text-uppercase mb-3">Subscribe</h5>
                            <p class="text-muted small fw-bold">Monthly digest of what's new and exciting.</p>
                            <div class="d-flex w-100 gap-2">
                                <label for="newsletter1" class="visually-hidden">Email address</label>
                                <input id="newsletter1" type="text" class="form-control" placeholder="EMAIL ADDRESS" style="border: 2px solid #000; border-radius: 0;">
                                <button class="btn btn-primary" type="button" style="border-radius: 0; border: 2px solid #000; font-weight: 900;">SUBSCRIBE</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="d-flex justify-content-between py-4 my-4 border-top border-dark">
                    <p class="fw-bold">&copy; 2025 Gestion Centre de Formation. All rights reserved.</p>
                    <ul class="list-unstyled d-flex">
                        <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-twitter"></i></a></li>
                        <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-instagram"></i></a></li>
                        <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-facebook"></i></a></li>
                    </ul>
                </div>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
