@page
@model GestionCentreDeFormation.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "Manage Courses";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-4 fw-black mb-0">Courses</h1>
        <p class="lead text-muted fw-bold">Manage course catalog and curriculum.</p>
    </div>
    <a asp-page="Create" class="btn btn-admin btn-admin-primary d-flex align-items-center gap-2">
        <i class="bi bi-plus-square-fill"></i> Create New Course
    </a>
</div>

<!-- Search Bar -->
<div class="row mb-4">
    <div class="col-12">
        <div class="admin-card p-4">
            <form method="get" class="d-flex gap-3">
                <div class="flex-grow-1">
                    <label for="search" class="visually-hidden">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-black text-white border-2 border-dark rounded-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control form-control-admin form-control-lg" id="search" name="SearchTerm" placeholder="Search by Title..." value="@Model.SearchTerm">
                    </div>
                </div>
                <button type="submit" class="btn btn-admin btn-lg">Search</button>
            </form>
        </div>
    </div>
</div>

<!-- Courses Table -->
<div class="row">
    <div class="col-12">
        <div class="admin-card p-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-admin table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">End Date</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Course)
                        {
                            <tr>
                                <td class="fw-bold">@item.Title</td>
                                <td class="font-monospace">DH @item.Price</td>
                                <td>@item.StartDate.ToShortDateString()</td>
                                <td>@item.EndDate.ToShortDateString()</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0 fw-bold text-uppercase border-2">
                                            Edit
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-0 fw-bold text-uppercase border-2 ms-1" style="background-color: #FF4400; border-color: #000; color: #fff;">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
