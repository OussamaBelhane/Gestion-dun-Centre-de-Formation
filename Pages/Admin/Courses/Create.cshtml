@page
@model GestionCentreDeFormation.Pages.Admin.Courses.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<div class="container py-16">
    <div class="mb-8">
        <a asp-page="./Index" class="btn btn-outline">&larr; Back to Courses</a>
    </div>

    <div class="grid">
        <div class="col-8">
            <h1 style="font-size: var(--font-size-3xl); margin-bottom: var(--space-2);">Create New Course</h1>
            <p style="color: var(--color-text-light); margin-bottom: var(--space-12);">Add a new course to the curriculum.</p>

            <form method="post" style="max-width: 600px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Course.Title" style="font-weight: 700; text-transform: uppercase; font-size: var(--font-size-xs); letter-spacing: 0.1em; margin-bottom: var(--space-2); display: block;"></label>
                    <input asp-for="Course.Title" class="form-control" />
                    <span asp-validation-for="Course.Title" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Course.Description" style="font-weight: 700; text-transform: uppercase; font-size: var(--font-size-xs); letter-spacing: 0.1em; margin-bottom: var(--space-2); display: block;"></label>
                    <textarea asp-for="Course.Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Course.Description" class="text-danger"></span>
                </div>
                
                <div class="grid" style="grid-template-columns: 1fr 1fr; gap: var(--space-4);">
                    <div class="form-group">
                        <label asp-for="Course.StartDate" style="font-weight: 700; text-transform: uppercase; font-size: var(--font-size-xs); letter-spacing: 0.1em; margin-bottom: var(--space-2); display: block;"></label>
                        <input asp-for="Course.StartDate" class="form-control" type="date" />
                        <span asp-validation-for="Course.StartDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Course.EndDate" style="font-weight: 700; text-transform: uppercase; font-size: var(--font-size-xs); letter-spacing: 0.1em; margin-bottom: var(--space-2); display: block;"></label>
                        <input asp-for="Course.EndDate" class="form-control" type="date" />
                        <span asp-validation-for="Course.EndDate" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="grid" style="grid-template-columns: 1fr 1fr; gap: var(--space-4);">
                    <div class="form-group">
                        <label asp-for="Course.Price" style="font-weight: 700; text-transform: uppercase; font-size: var(--font-size-xs); letter-spacing: 0.1em; margin-bottom: var(--space-2); display: block;"></label>
                        <input asp-for="Course.Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Course.Price" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Course.Capacity" style="font-weight: 700; text-transform: uppercase; font-size: var(--font-size-xs); letter-spacing: 0.1em; margin-bottom: var(--space-2); display: block;"></label>
                        <input asp-for="Course.Capacity" class="form-control" type="number" />
                        <span asp-validation-for="Course.Capacity" class="text-danger"></span>
                    </div>
                </div>
                
                <div style="margin-top: var(--space-8);">
                    <button type="submit" class="btn btn-lg">Create Course</button>
                    <a asp-page="./Index" class="btn btn-lg btn-outline" style="margin-left: var(--space-4);">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
