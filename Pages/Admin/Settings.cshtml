@page
@model GestionCentreDeFormation.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Global Settings";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-4 fw-black mb-0">Settings</h1>
        <p class="lead text-muted fw-bold">Configure global platform options.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card p-5">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success border-2 border-dark rounded-0 fw-bold mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @Model.Message
                </div>
            }

            <form method="post">
                <div class="mb-4">
                    <label asp-for="PlatformName" class="form-label text-uppercase fw-bold">Platform Name</label>
                    <input asp-for="PlatformName" class="form-control form-control-admin form-control-lg" placeholder="e.g. Gestion Centre de Formation" />
                    <span asp-validation-for="PlatformName" class="text-danger fw-bold small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="SupportEmail" class="form-label text-uppercase fw-bold">Support Email</label>
                    <input asp-for="SupportEmail" type="email" class="form-control form-control-admin form-control-lg" placeholder="e.g. support@gcf.com" />
                    <span asp-validation-for="SupportEmail" class="text-danger fw-bold small"></span>
                </div>

                <div class="mb-5">
                    <div class="form-check form-switch">
                        <input asp-for="EnrollmentsOpen" class="form-check-input border-2 border-dark" type="checkbox" role="switch" id="enrollmentSwitch" style="width: 3rem; height: 1.5rem;">
                        <label class="form-check-label fw-bold text-uppercase ms-2 pt-1" for="enrollmentSwitch">Enrollments Open?</label>
                    </div>
                    <div class="form-text fw-bold">If unchecked, students cannot register for new courses.</div>
                </div>

                <button type="submit" class="btn btn-admin btn-admin-orange btn-lg w-100 py-3 fs-5">
                    <i class="bi bi-save-fill me-2"></i> Save Changes
                </button>
            </form>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="admin-card bg-black text-white p-4">
            <h4 class="text-white border-bottom border-white pb-2 mb-4">System Info</h4>
            <ul class="list-unstyled">
                <li class="mb-3 d-flex justify-content-between">
                    <span class="opacity-75">Version</span>
                    <span class="fw-bold">v1.2.0</span>
                </li>
                <li class="mb-3 d-flex justify-content-between">
                    <span class="opacity-75">Server Status</span>
                    <span class="fw-bold text-success">Online</span>
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
