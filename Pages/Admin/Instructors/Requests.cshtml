@page
@model GestionCentreDeFormation.Pages.Admin.Instructors.RequestsModel
@{
    ViewData["Title"] = "Instructor Requests";
    Layout = "_AdminLayout";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-4 fw-black text-uppercase m-0">Instructor Requests</h1>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success border-2 border-dark rounded-0 fw-bold" role="alert">
            @TempData["Message"]
        </div>
    }

    <div class="card border-2 border-dark rounded-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light border-bottom border-dark">
                        <tr>
                            <th class="p-3 text-uppercase fw-black">Name</th>
                            <th class="p-3 text-uppercase fw-black">Email</th>
                            <th class="p-3 text-uppercase fw-black">Status</th>
                            <th class="p-3 text-uppercase fw-black text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PendingInstructors)
                        {
                            <tr>
                                <td class="p-3 align-middle fw-bold">@item.FirstName @item.LastName</td>
                                <td class="p-3 align-middle">@item.Email</td>
                                <td class="p-3 align-middle">
                                    <span class="badge bg-warning text-dark rounded-0 text-uppercase">Pending</span>
                                </td>
                                <td class="p-3 align-middle text-end">
                                    <form method="post" asp-page-handler="Approve" asp-route-id="@item.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success rounded-0 fw-bold text-uppercase">
                                            <i class="bi bi-check-lg me-1"></i> Approve
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        @if (!Model.PendingInstructors.Any())
                        {
                            <tr>
                                <td colspan="4" class="p-5 text-center text-muted fw-bold">No pending instructor requests.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
