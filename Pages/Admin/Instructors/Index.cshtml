@page
@model GestionCentreDeFormation.Pages.Admin.Instructors.IndexModel

@{
    ViewData["Title"] = "Instructors";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-4 fw-black mb-0">Instructors</h1>
        <p class="lead text-muted fw-bold">Manage your teaching staff.</p>
    </div>
    <a asp-page="Create" class="btn btn-admin btn-admin-primary d-flex align-items-center gap-2">
        <i class="bi bi-plus-square-fill"></i> Add New Instructor
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="admin-card p-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-admin table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Title</th>
                            <th scope="col">Bio</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Instructor)
                        {
                            <tr>
                                <td class="fw-bold">
                                    <div class="d-flex align-items-center gap-3">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="rounded-circle border border-2 border-dark" width="40" height="40" style="object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle border border-2 border-dark bg-light d-flex align-items-center justify-content-center fw-bold" style="width: 40px; height: 40px;">
                                                @item.Name.Substring(0, 1)
                                            </div>
                                        }
                                        @item.Name
                                    </div>
                                </td>
                                <td>@item.Title</td>
                                <td class="text-muted small">@item.Bio.Substring(0, Math.Min(item.Bio.Length, 50))...</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0 fw-bold text-uppercase border-2">Edit</a>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0 fw-bold text-uppercase border-2 ms-1">Details</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-0 fw-bold text-uppercase border-2 ms-1" style="background-color: #FF4400; border-color: #000; color: #fff;">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
