@page
@model GestionCentreDeFormation.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Dashboard Overview";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-4 fw-black mb-0">Dashboard</h1>
        <p class="lead text-muted fw-bold">Welcome back, Admin.</p>
    </div>
    <div class="d-flex gap-3">
        <span class="badge bg-black text-white rounded-0 p-2 fs-6 border border-dark">
            <i class="bi bi-calendar-event me-2"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
        </span>
    </div>
</div>

<!-- Stat Cards -->
<div class="row mb-5">
    <!-- Total Revenue -->
    <div class="col-md-6">
        <div class="admin-card h-100 d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h5 class="text-uppercase text-muted mb-0">Total Revenue</h5>
                <i class="bi bi-currency-exchange fs-3"></i>
            </div>
            <div>
                <h2 class="display-4 fw-black mb-0">@Model.TotalRevenue.ToString("N0") <span class="fs-4 text-muted">MAD</span></h2>
                <div class="mt-3 d-flex align-items-center gap-2">
                    <span class="badge bg-success rounded-0 text-uppercase">Live Data</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Students -->
    <div class="col-md-6">
        <div class="admin-card h-100 d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h5 class="text-uppercase text-muted mb-0">Active Students</h5>
                <i class="bi bi-people-fill fs-3"></i>
            </div>
            <div>
                <h2 class="display-4 fw-black mb-0">@Model.ActiveStudents</h2>
                <div class="mt-3 d-flex align-items-center gap-2">
                    <span class="badge bg-black rounded-0 text-uppercase">Enrolled Students</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts & Activity -->
<div class="row mb-4">
    <!-- Enrollment Chart -->
    <div class="col-md-8">
        <div class="admin-card h-100 p-0">
            <div class="d-flex justify-content-between align-items-center p-4 border-bottom border-2 border-dark">
                <h5 class="mb-0 text-uppercase fw-black">Enrollments Overview</h5>
            </div>
            <div class="p-4">
                <canvas id="enrollmentChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-md-4">
        <div class="admin-card h-100 p-0">
            <div class="p-4 border-bottom border-2 border-dark">
                <h5 class="mb-0 text-uppercase fw-black">Recent Activity</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var enrollment in Model.RecentEnrollments)
                {
                    <div class="list-group-item border-bottom border-dark p-4">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h6 class="fw-black text-uppercase mb-0">New Enrollment</h6>
                            <small class="text-muted">@enrollment.EnrollmentDate.ToString("MMM dd")</small>
                        </div>
                        <p class="mb-0 text-muted small fw-bold">@enrollment.Student?.FirstName @enrollment.Student?.LastName joined "@enrollment.Course?.Title"</p>
                    </div>
                }
                @if (!Model.RecentEnrollments.Any())
                {
                    <div class="p-4 text-center text-muted">No recent activity.</div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <h4 class="mb-4 border-bottom border-2 border-dark pb-2">Quick Actions</h4>
            <div class="d-flex gap-3 flex-wrap">
                <a href="/Admin/Courses/Create" class="btn btn-admin btn-admin-primary btn-lg d-flex align-items-center gap-2">
                    <i class="bi bi-plus-square-fill"></i> Create New Course
                </a>
                <a href="/Admin/Instructors/Create" class="btn btn-admin btn-lg d-flex align-items-center gap-2">
                    <i class="bi bi-person-plus-fill"></i> Add Instructor
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('enrollmentChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(Model.ChartLabels)],
                    datasets: [{
                        label: 'Enrollments',
                        data: [@Model.ChartData],
                        backgroundColor: '#000000',
                        borderWidth: 0,
                        barThickness: 40
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 4],
                                color: '#e0e0e0',
                                drawBorder: false
                            },
                            ticks: {
                                precision: 0
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });
    </script>
}
