@page
@model GestionCentreDeFormation.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Dashboard Overview";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-4 fw-black mb-0">Dashboard</h1>
        <p class="lead text-muted fw-bold">Welcome back, Admin.</p>
    </div>
    <div class="d-flex gap-3">
        <span class="badge bg-black text-white rounded-0 p-2 fs-6 border border-dark">
            <i class="bi bi-calendar-event me-2"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
        </span>
    </div>
</div>

<!-- Stat Cards -->
<div class="row mb-5">
    <!-- Total Revenue -->
    <div class="col-md-4">
        <div class="admin-card h-100 d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h5 class="text-uppercase text-muted mb-0">Total Revenue</h5>
                <i class="bi bi-currency-exchange fs-3"></i>
            </div>
            <div>
                <h2 class="display-4 fw-black mb-0">1,245,000 <span class="fs-4 text-muted">MAD</span></h2>
                <div class="mt-3 d-flex align-items-center gap-2">
                    <span class="badge bg-success rounded-0 text-uppercase">+12.5%</span>
                    <span class="small fw-bold text-muted">vs last month</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Students -->
    <div class="col-md-4">
        <div class="admin-card h-100 d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h5 class="text-uppercase text-muted mb-0">Active Students</h5>
                <i class="bi bi-people-fill fs-3"></i>
            </div>
            <div>
                <h2 class="display-4 fw-black mb-0">842</h2>
                <div class="mt-3 d-flex align-items-center gap-2">
                    <span class="badge bg-black rounded-0 text-uppercase">+24</span>
                    <span class="small fw-bold text-muted">new this week</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Enrollments -->
    <div class="col-md-4">
        <div class="admin-card h-100 d-flex flex-column justify-content-between" style="border-color: #FF4400;">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h5 class="text-uppercase mb-0" style="color: #FF4400;">Pending Enrollments</h5>
                <i class="bi bi-hourglass-split fs-3" style="color: #FF4400;"></i>
            </div>
            <div>
                <h2 class="display-4 fw-black mb-0" style="color: #FF4400;">18</h2>
                <div class="mt-3 d-flex align-items-center gap-2">
                    <span class="badge rounded-0 text-uppercase" style="background-color: #FF4400;">Action Required</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts & Activity -->
<div class="row mb-4">
    <!-- Enrollment Chart -->
    <div class="col-md-8">
        <div class="admin-card h-100 p-0">
            <div class="d-flex justify-content-between align-items-center p-4 border-bottom border-2 border-dark">
                <h5 class="mb-0 text-uppercase fw-black">Enrollments Overview</h5>
                <button class="btn btn-sm btn-outline-dark rounded-0 fw-bold text-uppercase border-2">Download Report</button>
            </div>
            <div class="p-4">
                <canvas id="enrollmentChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-md-4">
        <div class="admin-card h-100 p-0">
            <div class="p-4 border-bottom border-2 border-dark">
                <h5 class="mb-0 text-uppercase fw-black">Recent Activity</h5>
            </div>
            <div class="list-group list-group-flush">
                <div class="list-group-item border-bottom border-dark p-4">
                    <div class="d-flex justify-content-between align-items-start mb-1">
                        <h6 class="fw-black text-uppercase mb-0">New Student Registration</h6>
                        <small class="text-muted">Now</small>
                    </div>
                    <p class="mb-0 text-muted small fw-bold">Maria Garcia joined "Web Dev 101"</p>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-bottom border-dark p-4">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h6 class="fw-black text-uppercase mb-0">Course Completed</h6>
                            <small class="text-muted">3d</small>
                        </div>
                        <p class="mb-0 text-muted small fw-bold">Advanced C# batch ended</p>
                    </div>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item p-4">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h6 class="fw-black text-uppercase mb-0">New Review</h6>
                            <small class="text-muted">1w</small>
                        </div>
                        <p class="mb-0 text-muted small fw-bold">5 star review from John Doe</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <h4 class="mb-4 border-bottom border-2 border-dark pb-2">Quick Actions</h4>
            <div class="d-flex gap-3 flex-wrap">
                <a href="/Admin/Courses/Create" class="btn btn-admin btn-admin-primary btn-lg d-flex align-items-center gap-2">
                    <i class="bi bi-plus-square-fill"></i> Create New Course
                </a>
                <button class="btn btn-admin btn-lg d-flex align-items-center gap-2">
                    <i class="bi bi-file-earmark-spreadsheet-fill"></i> Export Student List
                </button>
                <button class="btn btn-admin btn-lg d-flex align-items-center gap-2">
                    <i class="bi bi-envelope-fill"></i> Send Announcement
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('enrollmentChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Enrollments',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: '#000000',
                        borderWidth: 0,
                        barThickness: 40
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 4],
                                color: '#e0e0e0',
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });
    </script>
}
