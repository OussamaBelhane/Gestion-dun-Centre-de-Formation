@page
@model GestionCentreDeFormation.Pages.Admin.StudentsModel
@{
    ViewData["Title"] = "Student Management";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-4 fw-black mb-0">Students</h1>
        <p class="lead text-muted fw-bold">Manage student enrollments and profiles.</p>
    </div>
    <button class="btn btn-admin btn-admin-primary d-flex align-items-center gap-2">
        <i class="bi bi-person-plus-fill"></i> Add New Student
    </button>
</div>

<!-- Search Bar -->
<div class="row mb-4">
    <div class="col-12">
        <div class="admin-card p-4">
            <form method="get" class="d-flex gap-3">
                <div class="flex-grow-1">
                    <label for="search" class="visually-hidden">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-black text-white border-2 border-dark rounded-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control form-control-admin form-control-lg" id="search" name="SearchTerm" placeholder="Search by Name or Email..." value="@Model.SearchTerm">
                    </div>
                </div>
                <button type="submit" class="btn btn-admin btn-lg">Search</button>
            </form>
        </div>
    </div>
</div>

<!-- Students Table -->
<div class="row">
    <div class="col-12">
        <div class="admin-card p-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-admin table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col" class="text-center">Enrolled Courses</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td class="fw-bold">@student.Name</td>
                                <td class="font-monospace">@student.Email</td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border border-dark rounded-0 fs-6">@student.EnrolledCoursesCount</span>
                                </td>
                                <td>
                                    @if (student.Status == "Active")
                                    {
                                        <span class="badge bg-success rounded-0 text-uppercase">Active</span>
                                    }
                                    else if (student.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark rounded-0 text-uppercase border border-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-0 text-uppercase">Inactive</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-dark rounded-0 fw-bold text-uppercase border-2">
                                        View Details
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
