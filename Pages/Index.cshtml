@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    /* Neo-Brutalist Overrides for Home Page */
    :root {
        --neo-border: 3px solid #000000;
        --neo-shadow: 6px 6px 0px #000000;
        --neo-shadow-hover: 10px 10px 0px #000000;
        --neo-blue: #0057FF;
        --neo-yellow: #FFE600;
        --neo-orange: #FF4400;
    }

    .neo-text-massive {
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        line-height: 0.9;
        letter-spacing: -0.04em;
        text-transform: uppercase;
    }

    .neo-btn {
        border: var(--neo-border);
        box-shadow: var(--neo-shadow);
        font-weight: 800;
        text-transform: uppercase;
        padding: 1rem 2rem;
        transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        border-radius: 0 !important;
    }

    .neo-btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: var(--neo-shadow-hover);
    }

    .neo-btn-primary {
        background-color: var(--neo-blue);
        color: #fff;
    }
    
    .neo-btn-primary:hover {
        background-color: #000;
        color: #fff;
        border-color: #000;
    }

    .neo-btn-outline {
        background-color: #fff;
        color: #000;
    }

    .neo-card {
        border: var(--neo-border);
        background: #fff;
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .neo-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--neo-shadow);
    }

    .neo-card-img {
        border-bottom: var(--neo-border);
        height: 200px;
        object-fit: cover;
        width: 100%;
        background-color: #f0f0f0;
    }

    .neo-tag {
        background: #000;
        color: #fff;
        padding: 0.25rem 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        display: inline-block;
        margin-bottom: 0.5rem;
    }

    .stats-strip {
        background-color: #000;
        color: #fff;
        border-top: var(--neo-border);
        border-bottom: var(--neo-border);
    }

    .stat-item {
        border-right: 1px solid #333;
    }

    .stat-item:last-child {
        border-right: none;
    }

    .trust-icon-box {
        border: var(--neo-border);
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        background: var(--neo-yellow);
        box-shadow: 4px 4px 0px #000;
    }
    
    .marquee-container {
        overflow: hidden;
        white-space: nowrap;
        background: var(--neo-yellow);
        border-bottom: var(--neo-border);
        padding: 0.5rem 0;
    }
    
    .marquee-content {
        display: inline-block;
        animation: marquee 20s linear infinite;
        font-weight: 900;
        text-transform: uppercase;
        font-size: 1.2rem;
    }
    
    @@keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>

<!-- Marquee Strip -->
<div class="marquee-container">
    <div class="marquee-content">
        NEW BATCH STARTING SOON • MASTER .NET 8 • BECOME A FULL STACK HERO • SWISS QUALITY EDUCATION • ENROLL NOW • NEW BATCH STARTING SOON • MASTER .NET 8 • BECOME A FULL STACK HERO • SWISS QUALITY EDUCATION • ENROLL NOW •
    </div>
</div>

<!-- Hero Section -->
<section class="container py-5 my-5">
    <div class="row align-items-center g-5">
        <div class="col-lg-6">
            <h1 class="neo-text-massive mb-4">
                Forge Your <span style="color: var(--neo-blue); text-decoration: underline; text-decoration-thickness: 5px;">Future.</span>
            </h1>
            <p class="lead fw-bold mb-5" style="font-size: 1.5rem; max-width: 90%;">
                Master .NET, React, and AI with industry experts. No fluff, just hard skills.
            </p>
            <div class="d-flex gap-3 flex-wrap">
                <a asp-page="/Courses/Index" class="btn neo-btn neo-btn-primary btn-lg">
                    Explore Courses
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn neo-btn neo-btn-outline btn-lg">
                    Login Account
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <div style="position: relative;">
                <!-- Decorative back square -->
                <div style="position: absolute; top: 20px; left: 20px; width: 100%; height: 100%; background-color: var(--neo-orange); border: var(--neo-border); z-index: -1;"></div>
                
                <img src="https://placehold.co/600x400/EEE/31343C?text=CODE+YOUR+FUTURE" 
                     alt="Hero Image" 
                     class="img-fluid w-100" 
                     style="border: var(--neo-border); box-shadow: var(--neo-shadow);">
            </div>
        </div>
    </div>
</section>

<!-- Stats Strip -->
<section class="stats-strip py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 stat-item mb-4 mb-md-0">
                <h2 class="display-3 fw-black mb-0" style="font-weight: 900;">500+</h2>
                <p class="text-uppercase fw-bold letter-spacing-2 mb-0" style="letter-spacing: 2px; color: #ccc;">Graduates</p>
            </div>
            <div class="col-md-4 stat-item mb-4 mb-md-0">
                <h2 class="display-3 fw-black mb-0" style="font-weight: 900;">100%</h2>
                <p class="text-uppercase fw-bold letter-spacing-2 mb-0" style="letter-spacing: 2px; color: #ccc;">Hands-on</p>
            </div>
            <div class="col-md-4 stat-item">
                <h2 class="display-3 fw-black mb-0" style="font-weight: 900;">20+</h2>
                <p class="text-uppercase fw-bold letter-spacing-2 mb-0" style="letter-spacing: 2px; color: #ccc;">Expert Mentors</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses -->
