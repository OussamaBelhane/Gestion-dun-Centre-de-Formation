@page
@model GestionCentreDeFormation.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <!-- Stat Card 1 -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Total Students</h6>
                        <h2 class="mb-0 display-4 fw-bold">524</h2>
                    </div>
                    <div class="bg-black text-white p-2">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-success fw-bold"><i class="bi bi-arrow-up"></i> 12%</span>
                    <span class="text-muted small">since last month</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Stat Card 2 -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Active Courses</h6>
                        <h2 class="mb-0 display-4 fw-bold">42</h2>
                    </div>
                    <div class="bg-primary text-white p-2" style="background-color: var(--swiss-blue) !important;">
                        <i class="bi bi-journal-text fs-4"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-success fw-bold"><i class="bi bi-arrow-up"></i> 4</span>
                    <span class="text-muted small">new courses added</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Stat Card 3 -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Revenue</h6>
                        <h2 class="mb-0 display-4 fw-bold">CHF 128k</h2>
                    </div>
                    <div class="bg-danger text-white p-2" style="background-color: var(--swiss-orange) !important;">
                        <i class="bi bi-currency-dollar fs-4"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-success fw-bold"><i class="bi bi-arrow-up"></i> 8.5%</span>
                    <span class="text-muted small">vs previous period</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Enrollments Overview</h5>
                <button class="btn btn-sm btn-outline-dark">Download Report</button>
            </div>
            <div class="card-body">
                <canvas id="enrollmentChart" height="300"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header py-3">
                <h5 class="mb-0">Recent Activity</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">New student registration</h6>
                                <p class="mb-0 opacity-75">Maria Garcia joined "Web Dev 101"</p>
                            </div>
                            <small class="opacity-50 text-nowrap">Now</small>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">Course completed</h6>
                                <p class="mb-0 opacity-75">Advanced C# batch ended</p>
                            </div>
                            <small class="opacity-50 text-nowrap">3d</small>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">New review</h6>
                                <p class="mb-0 opacity-75">5 star review from John Doe</p>
                            </div>
                            <small class="opacity-50 text-nowrap">1w</small>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('enrollmentChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'New Enrollments',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: '#000000',
                        borderWidth: 0,
                        barThickness: 40
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 4],
                                color: '#e0e0e0',
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });
    </script>
}
